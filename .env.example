# ===========================================
# CCGL Analytics System Environment Configuration
# ===========================================

# Database Configuration
# -----------------------
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_secure_password
DB_NAME=ccgl_analytics
DB_TYPE=mysql
# Alternative: postgresql, sqlite

# Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration (for caching)
# ----------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# LLM API Keys
# ------------
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id
OPENAI_MODEL=gpt-4

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-3-sonnet-20240229

# ZhipuAI Configuration
ZHIPU_API_KEY=your_zhipu_api_key
ZHIPU_MODEL=glm-4

# Alibaba Tongyi Qianwen Configuration
DASHSCOPE_API_KEY=your_dashscope_api_key
QWEN_MODEL=qwen-turbo

# MCP Server Configuration
# ------------------------
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_ENABLE_SSL=false
MCP_SSL_CERT_PATH=
MCP_SSL_KEY_PATH=

# MCP Client Configuration
MCP_CLIENT_TIMEOUT=30
MCP_MAX_CONNECTIONS=100
MCP_HEARTBEAT_INTERVAL=30

# Web Server Configuration
# ------------------------
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_DEBUG=false
WEB_RELOAD=false

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# FastAPI Configuration
FASTAPI_PORT=8000
FASTAPI_HOST=0.0.0.0

# Security Configuration
# ----------------------
SECRET_KEY=your_super_secret_key_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password hashing
PASSWORD_HASH_ROUNDS=12

# Logging Configuration
# ---------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/ccgl_analytics.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Development/Debug Settings
DEBUG=false
TESTING=false
PROFILING=false

# Data Analysis Configuration
# ---------------------------
# Default analysis parameters
DEFAULT_CLUSTER_COUNT=auto
ANOMALY_CONTAMINATION=0.1
PCA_COMPONENTS=2
TSNE_PERPLEXITY=30

# Performance Settings
MAX_WORKERS=4
CHUNK_SIZE=10000
MEMORY_LIMIT=2GB

# Chart and Visualization
# -----------------------
QUICKCHART_API_URL=https://quickchart.io
CHART_WIDTH=800
CHART_HEIGHT=600
CHART_DPI=300

# File Storage Configuration
# --------------------------
UPLOAD_FOLDER=uploads/
MAX_UPLOAD_SIZE=100MB
ALLOWED_EXTENSIONS=csv,xlsx,json,parquet

# Report Generation
REPORT_TEMPLATE_PATH=templates/
REPORT_OUTPUT_PATH=reports/
REPORT_FORMAT=pdf,html

# Monitoring and Metrics
# ----------------------
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
METRICS_PATH=/metrics

# Docker Configuration
# --------------------
CONTAINER_NAME=ccgl-analytics
DOCKER_NETWORK=ccgl-network

# External Services
# -----------------
# Email Configuration (for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_TLS=true

# Webhook Configuration
WEBHOOK_URL=
WEBHOOK_SECRET=

# Cloud Storage (Optional)
# ------------------------
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=

# Google Cloud Storage
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
GCS_BUCKET_NAME=

# Advanced Features
# -----------------
# Real-time Processing
ENABLE_REALTIME=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=ccgl-analytics

# Auto-scaling
AUTO_SCALE=false
MIN_WORKERS=1
MAX_WORKERS=10
SCALE_THRESHOLD=80

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ML_PIPELINE=true
ENABLE_LLM_INTEGRATION=true
ENABLE_MCP_ARCHITECTURE=true
ENABLE_WEB_DASHBOARD=true

# Backup Configuration
# --------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# Internationalization
# --------------------
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,zh-CN
TIMEZONE=UTC

# Performance Tuning
# ------------------
CACHE_TTL=3600
QUERY_CACHE_SIZE=1000
RESULT_CACHE_SIZE=500
CONNECTION_TIMEOUT=10
READ_TIMEOUT=30
WRITE_TIMEOUT=30